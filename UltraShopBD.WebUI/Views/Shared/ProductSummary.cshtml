@model UltraShopBd.Domain.Entities.Product

@{
    ViewBag.Title = "Products";
    
}



<div class="col-md-3 col-md2"style="margin-bottom:50px">
    <div class="col-md1 simpleCart_shelfItem">

        <a href='@Url.Action("Details", "ProductDetails", new { ProductIdu= Model.ProductId})'>
            <img class="img-responsive" src='@Url.Content(Model.ImageUrl)' alt="" style="max-height: 210px ;min-height:210px ; !important;" />
        </a>
        <h3><a href="single.html">@if (@Model.Name.Length > 10)
                            {
                                @Model.Name.Substring(0, 10);@:...
                                          }
                            else
                            {
                                @Model.Name;
                            }</a></h3>
        <div class="price">
            <h5 class="item_price">৳ @Model.Price.ToString()                </h5>
            <a href='@Url.Action("Details", "ProductDetails", new { ProductIdu= Model.ProductId})' class="item_add">Add To Cart</a>
            <div class="clearfix"> </div>
        </div>
    </div>



</div>












