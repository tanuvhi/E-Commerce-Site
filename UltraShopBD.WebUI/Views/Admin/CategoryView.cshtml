@model IEnumerable<UltraShopBd.Domain.Entities.Category>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "CategoryCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "CategoryEdit", new { categoryId=item.CategoryId }) 
          
        </td>
    </tr>
}

</table>
