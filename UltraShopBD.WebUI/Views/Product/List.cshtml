@model  UltraShopBd.WebUI.Models.ProductListViewModel

@{
    
}



<div class="container">
    <div class="content-top">
        <h1>Recent Products</h1>


        @foreach (var p in Model.Products)
        {
           
            @Html.Partial("ProductSummary", p)

        }


    </div>
   
    <div class="clearfix"> </div>
   
        <div class="pull-right" style="margin-bottom:40px">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { Page = x, CategoryId = Model.CurrentCategoryId, SubCategoryId = Model.CurrentSubCategoryId }))

        </div>
   
</div>




          