@model UltraShopBd.Domain.Entities.User

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/Customer_LayoutPage.cshtml";
}

<h2>Check Your Information Details </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
